      '(("" "xcolor" t)
        ("" "graphicx" t)
        ("" "xeCJK" t)
        ("" "lmodern" t)
        ("" "verbatim" t)
        ("" "soul" t)        
        ("" "longtable" nil)
        ("" "float" nil)        
        ("" "tikz" t)
        (""     "wrapfig"   nil)
        (""     "rotating"   nil)        
        (""     "textcomp"  t)
        ("" "url" t)
        ("" "listings" t)
        ("" "geometry" t)        
        (""     "marvosym"  t)
        (""  "textcomp" t)
        ("" "natbib" t)
        ("" "fancyhdr" t)
;;        ("" "comment" t)                
        ("" "geometry" t)
;;        ("xetex" "hyperref" t)
        (""     "wasysym"   t)
        (""     "latexsym"  t)
        (""     "amssymb"   t)
